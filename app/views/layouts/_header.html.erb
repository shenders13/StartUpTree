<header class="navbar navbar-static-top navbar-static-top-main">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><img src="http://res.cloudinary.com/small-change/image/upload/v1461426069/tree-24-xxl_jmymdr.png" class="navbar-icon"></a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">

        <% @their_startup = StartUp.find_by_user_id(current_user.id) if current_user && StartUp.pluck(:user_id).include?(current_user.id) %>
        <% if @their_startup.present? %>
          <li><a href = "/start_ups/<%= @their_startup.id %>"><i class="fa fa-building-o" aria-hidden="true"></i><span class="suname"> <%= @their_startup.name %></span></a></li>
        <% end %>



        <li><a href = "/start_ups"><i class="fa fa-search" aria-hidden="true"></i> browse startups</a></li>
        <li><a href = "#"><i class="fa fa-area-chart" aria-hidden="true"></i> dashboard</a></li>
        <% unless current_user %>
          <li><a href = "#"><i class="fa fa-info" aria-hidden="true"></i> about startup tree</a></li>
        <% end %>
        <div class="visible-xs mobile-sign-in">
          <li><a href = "/users/sign_in"><i class="fa fa-sign-in" aria-hidden="true"></i> sign in</a></li>
        </div>
      </ul>
      <ul class="nav navbar-nav navbar-right push-back">
        <li>
          <div class="hidden-xs">
            <% if current_page?('/') && !user_signed_in? %>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-inline' }) do |f| %>
                <%= f.error_notification %>
                  <div class="form-inputs form-group">
                    <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', class: 'form-control input-lg main-input devise-input' %>
                    <%= f.input_field :password, required: false, label: false, placeholder: 'Password', class: 'form-control input-lg main-input devise-input' %>
                  </div>
                  <div class="form-actions">
                    <%= f.button :submit, "Log in", class: 'btn btn-log-in-home'%>
                  </div>
              <% end %>
            <% end %>
          </div>
          <% if current_user %>
            <li><%= link_to ('<i class="fa fa-leaf" aria-hidden="true"></i> leave').html_safe, destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to ('<i class="fa fa-sign-in"></i> sign in').html_safe, root_path unless current_page?('/')%></li>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>


<script>
$(document).ready(function () {
        $(".navbar-toggle").on("click", function () {
            $(this).toggleClass("active");
        });
    });
</script>