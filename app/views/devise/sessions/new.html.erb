<div class="container">
  <div class="col-sm-6 col-xs-12">
    <div class="logo-with-title">
      <img src="http://res.cloudinary.com/small-change/image/upload/v1461426069/tree-24-xxl_jmymdr.png" class="logo">
      <p class='start-up-header'>StartUp<span class="tree">Tree</span></p>
    </div>
    <p class="catch-phrase"> Helping startups branch out </p>
  </div>
  <div class="col-sm-6 col-xs-12">
    <h1 class="create-account">Create an account</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="col-xs-12 col-sm-10 col-md-10">
        <div class="user-forms">
          <div class="form-inputs form-group">
            <%= f.input_field :first_name, required: true, autofocus: true, label: false, placeholder: 'First Name', class: 'sign-up-form-first-name' %>
            <%= f.input_field :last_name, required: true, autofocus: true, label: false, placeholder: 'Last Name', class: 'sign-up-form-last-name' %>
            <%= f.input_field :email, required: true, autofocus: true, label: false, placeholder: 'Email', class: 'sign-up-form' %>
            <%= f.input_field :password, required: true, autofocus: true, label: false, placeholder: 'Password', class: 'sign-up-form' %>
            <div class="form-inline radios">
              <%= f.input :start_up, :collection => ["  I'm a startup", "  I'm not a startup"], as: :radio_buttons, label: false, class:"user_radio_buttons" %>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-md btn-sign-up' %>
        </div>
      </div>
    <% end %>
  </div>
</div>







