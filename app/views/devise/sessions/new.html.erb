<div class="container">
  <div class="col-sm-5 hidden-xs">
    <div class="logo-with-title">
      <img src="http://res.cloudinary.com/small-change/image/upload/v1461426069/tree-24-xxl_jmymdr.png" class="logo">
      <p class='start-up-header'>StartUp<span class="tree">Tree</span></p>
    </div>
    <p class="catch-phrase"> Helping startups branch out </p>
  </div>
  <div class="col-sm-1 hidden-xs">
  </div>
  <div class="col-sm-6 col-xs-12">
    <h1 class="create-account">Create an account</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="user-forms">
        <div class="form-inputs form-group">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <%= f.input_field :first_name, required: true, autofocus: true, label: false, placeholder: 'First Name', class: 'sign-up-form' %>
          </div>
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <%= f.input_field :last_name, required: true, autofocus: true, label: false, placeholder: 'Last Name', class: 'sign-up-form' %>
          </div>
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <%= f.input_field :email, required: true, autofocus: true, label: false, placeholder: 'Email', class: 'sign-up-form' %>
          </div>
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <%= f.input_field :password, required: true, autofocus: true, label: false, placeholder: 'Password', class: 'sign-up-form' %>
          </div>
          <div class="col-xs-12">
            <div class="radios">
              
                <p> Are you a start up? </p>
                <%= f.input :start_up, :collection => [true, false], as: :radio_buttons, label: false %>

            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="form-actions">
          <div class="user-submit-button">
            <%= f.button :submit, "Sign up", class: 'btn btn-md btn-sign-up' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
