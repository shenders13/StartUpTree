<div class='col-xs-12 col-sm-8 col-sm-2 col-md-6 col-md-offset-3'>
  <%= simple_form_for(@stage) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :stage_name, :required => true, class: "stage-form", placeholder: "name of stage", label: false%>
      <%= f.input :stage_description, :required => true, class: "stage-form", placeholder: "description of stage", label: false%>
      <%= f.input :stage_icon, :required => true, class: "stage-form", placeholder: "url of stage icon", label: false%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-blue" %>
      <%= link_to 'Back', stages_path, class: "btn btn-blue" %>
    </div>
  <% end %>
</div>

